@model Crud.Models.CrudViewModel

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container body-content" style="width:40%; margin-top:2%">
        <h2>Güncelle</h2>

        @using (Html.BeginForm("Guncelle", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                @Html.ValidationMessageFor(model => model.AdresID, "", new { @class = "error" })
                @Html.DropDownListFor(model => model.AdresID, ViewBag.AdresList as SelectList, "--Seçim Yapınız--", new { @class = "form-control" })<br />

                @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "error" })
                @Html.TextBoxFor(model => model.Adi, new { @class = "form-control", @placeholder = "Adı" })<br />

                @Html.ValidationMessageFor(model => model.Soyadi, "", new { @class = "error" })
                @Html.TextBoxFor(model => model.Soyadi, new { @class = "form-control", @placeholder = "Soyadı" })<br />

                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })<br />

                @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "error" })
                @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", @placeholder = "(___)___ __ __" })<br />

                <input type="submit" class="btn btn-block btn-primary" value="Güncelle" />
            </div>
        }

        @*<div class="container body-content" style="width:72%; margin-top:2%">
            @Html.ActionLink("Anasayfa", "Index")
        </div>*@
    </div>